<% provide(:title, 'Sign in') %>

<%= render 'layouts/header' %>

<div style="background: #fff; margin-top: 50px; margin-left: auto; margin-right: auto; width: 90%; padding: 30px; border-radius: 5px; box-shadow: 0 0 1px 1px; text-align:center;">

<h1>Sign in</h1>

<div class="large-7 row" style="margin: 0 auto;">

      <%= form_for(:session, url: sessions_path) do |f| %>	
	      <div class="large-6 field" style="margin: 0 auto;">      
	<%= f.label :email %>
	<%= f.text_field :email %>
</div>

	      <div class="large-6 field" style="margin: 0 auto;">      
	<%= f.label :password %>
	<%= f.password_field :password %>
</div>
<div class="actions">
	<%= f.submit "Sign in", class: "button small" %>
<% end %>
</div>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>

</div>


</div>
<div style="clear: both;"></div>

<%= link_to 'Back', users_path %>
