<%= form_for(@date_request, remote: true) do |f| %>
  <% if @date_request.errors.any? %>
    <div id="error_explanation" style="background: #F5A0A0;border: 1px solid;margin-bottom: 25px;padding: 10px; text-align: left;">
      <h5 style="margin-bottom: 0px;"><%= pluralize(@date_request.errors.count, "error") %> prohibited you from submitting date:</h5>

      <ul style="padding: 0 0 0 30px;margin-bottom: 5px;">
      <% @date_request.errors.each do |key, msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <style> #date-rating-yes label {font-weight:700;color:#999999; opacity:.4;}
	  #date-rating-yes label:hover {color:green;opacity:1;}
	  #date-rating-friend label {font-weight:700;color:#999999; opacity:.4;}
	  #date-rating-friend label:hover {color:orange;opacity:1;}
	  #date-rating-no label {font-weight:700;color:#999999; opacity:.4;}
	  #date-rating-no label:hover {color:red;opacity:1;}
	  </style>
  <div class="large-12" style="margin-top:20px;">
  <div class="large-12" style="margin: 0 auto 0 auto; text-align:center;">

  <div class="large-2 field" style="display: inline-block;text-align:left;">
    <%= f.label :first_name, "First Name*" %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="large-2 field" style="display: inline-block;text-align:left">
    <%= f.label :last_name, "Last Name" %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="large-2 field" style="display: inline-block;text-align:left">
    <%= f.label :date_phone, "Date's Phone Number" %><br>
    <%= f.text_field :date_phone, {id: "phone_new_date"} %>
  </div>
  <div class="large-2 field" style="display: inline-block;text-align:left">
    <%= f.label :date_username, "Date Username" %><br>
    <%= f.text_field :date_username %>
  </div>
  <div class="large-2 field" style="display: inline-block;text-align:left">
    <%= f.label :date_username_site, "Dating Site" %><br>
    <%= f.select( :date_username_site, [['OkCupid','OkCupid'],['eHarmony','eHarmony'],['Match.com','Match.com'],['PlentyofFish','PlentyofFish'],['Christian Mingle','Christian Mingle'],['DateHookup','DateHookup'],['HowAboutWe','HowAboutWe'],['BlackPeopleMeet','BlackPeopleMeet'],['JDate','JDate'],['Skout','Skout'],['SeniorPeopleMeet','SeniorPeopleMeet']], { :prompt => 'Select'}, style: "height: 32px;") %>
  </div>
  </div>

  <div class="large-8" style="margin: 20px auto 0 auto; text-align:center;"><h5>What'll it be?</h5></div>
	  <div class="large-8" style="margin: 15px auto 0 auto; text-align:center;">
		  
  <div class="large-3 field" style="display: inline-block;">
			  <label class="rating-icon rating-icon-yes" for="yes-rating" style="display:inline;">
				  <%= f.radio_button( :date_rating, "Yes", id: "yes-rating") %>
				  <div class="gray-image gray-image-yes"></div>
				  <span style="display: inline-block; font-weight:700" id="date-rating-yes">Another Date</span>
			  </label>
    
		  </div>

		  <div class="large-3 field" style="display: inline-block;">
			  <label class="rating-icon rating-icon-friend" for="friend-rating" style="display:inline;">
				  <%= f.radio_button( :date_rating, "Friends", id: "friend-rating") %>
				  <div class="gray-image gray-image-friend"></div>
				  <span style="display: inline-block; font-weight:700">Let's be friends!</span>
			  </label>
    
		  </div>

		  <div class="large-3 field" style="display: inline-block;padding-right: 25px;">
			  <label class="rating-icon rating-icon-no" for="no-rating" style="display:inline;">
				  <%= f.radio_button( :date_rating, "No", id: "no-rating") %>
				  <div class="gray-image gray-image-no"></div>
				  <span style="display: inline-block; font-weight:700" id="date-rating-no">Call it quits</span>
			  </label>
    
		  </div>
  </div>
  <div class="field" style="text-align:center;">
	  <h5 style="margin-top:20px; margin-bottom:0px;">Comment*</h5>
	  <h6>(anonymous unless you want the same thing)</h6>
    <%= f.text_area :date_comment %>
  </div>
  <div class="actions large-12" style="margin: 0 auto 0 auto; text-align:center;">
	  <%= f.submit "Create Date", class: "button tiny", style: "display:inline; margin-right: 15px;" %>
	  <%= link_to 'Forget it', root_path, class: "button tiny", style: "display:inline;" %>
  </div>
  
  </div>
<% end %>

