  $(function() {
    $( document ).tooltip();
  });
  </script>


<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" style="background: #F5A0A0;border: 1px solid;margin-bottom: 25px;padding: 10px;">
      <h5 style="margin-bottom: 0px;"><%= pluralize(@user.errors.count, "error") %> prohibited you from signing up:</h5>

      <ul style="padding: 0 0 0 30px;margin-bottom: 5px;">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="large-12" >
	  <div class="large-4" style="float: right; display: inline-block;">
	<p style="font-size: 18px;"><strong>Note:</strong> any information provided remains secure and strictly confidential, and it will only be used to match you with individuals you have dated.</p>
  </div>
	<div class="large-8" style="display: inline-block;">
  <div class="large-5 field" style="display: inline-block; margin-right: 10px;">
    <%= f.label :first_name, "First Name*" %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="large-5 field" style="display: inline-block;">
    <%= f.label :last_name, "Last Name*" %><br>
    <%= f.text_field :last_name %>
  </div>
  <div style="clear:both;"></div>
  <div class="large-5 field" style="display: inline-block; margin-right: 10px;">
	  <%= f.label :email, "Email*" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="large-5 field" style="display: inline-block;">
    <%= f.label :user_phone, "Phone Number*" %><br>
    <%= f.text_field :user_phone, {id: "phone_new"} %>
  </div>
  <div style="clear:both;"></div>

	  <%= f.fields_for :user_dating_usernames do |builder| %>
		  <%= render 'user_dating_username_fields', f: builder %>
	  <% end %>
	  <%= link_to_add_fields("Add Dating Username +", f, :user_dating_usernames) %>
	  

  <div style="clear:both;"></div>
  <div class="large-6 field" style="display: inline-block; margin-top: 10px;">
	  <%= f.label :user_handle, "LoveMeMaybe Handle*", style: "display: inline-block; margin-bottom:5px;" %>
	  <br>
	  <%= f.label :user_handle, "(This will be your unique LoveMeMaybe page)", style: "display: inline-block; margin-bottom:10px;font-size: 12px;" %>
	  <br>
    <%= f.text_field :user_handle %>
  </div>
  <div style="clear:both;"></div>
  <div class="large-6 field" style="display: inline-block;">
    <%= f.label :password, "Password (minimum 6 characters)*" %><br>
    <%= f.password_field :password %>
  </div>
  <div class="large-6 field" style="display: inline-block;">
    <%= f.label :password_confirmation, "Password Confirmation*" %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div style="clear:both;"></div>
  <div class="actions">
    <%= f.submit 'Sign Up', class: "button" %>
  </div>
  </div>
<% end %>



  </div>

