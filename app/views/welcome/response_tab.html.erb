<style>.request-link { color: #ffffff; }
	.request-link:hover { color: #ffffff; text-decoration: underline; }</style>

			<%= render 'layouts/header' %>

			<div style="background: url(<%= asset_path 'background.png' %>) repeat; margin-top: 50px; margin-left: auto; margin-right: auto; width: 90%; border-radius: 5px; /*box-shadow: 0 0 1px 1px;*/">
				<div style="width: 30%;height: 60px; border-radius: 5px 5px 0px 0px; margin-bottom: 0px; display: inline; float:left; padding: 20px; text-align: center;"><%= link_to 'Requests', root_path, class: "request-link" %></div>
				<div style="width: 30%;height: 60px; clear:both; margin-bottom: 0px; display: inline-block; padding: 20px; text-align: center;background: #f5f5f5;border-radius: 5px 5px 0px 0px;">Responses (<%= @response_count %>)</div>

				<div style="width: 100%; background: #fff; border-radius: 5px 5px 5px 5px; margin-top:0px; padding: 30px 10px 30px 30px;">
					<%= image_tag('link-link.png', style: "float: left;") %>
				<h5 style="display:inline; float: left;"> <a href=<%= root_url+@user.url_slug%>><%= root_url+@user.url_slug%></a> </h5>
					<%= image_tag('small-arrow.png', style: "float: left; margin-left: 10px;") %>
					<p style="margin-left: 10px; float: left; font-style: italic; font-weight: 900;">Post to your dating &amp; social media profiles or send to date</p>
					<div style="clear: both;"></div>
					<h4 style="margin-top: 0px; color: #444; font-size: 19px;">Matches</h4>

					<div class="small-2" style="float:left; margin: 10px;">First Name</div>
					
					<div class="small-2" style="float:left;margin: 10px;">Phone Number</div>
					<div class="small-2" style="float:left;margin: 10px;">Username</div>
					<div class="small-2" style="float:left;margin: 10px;">Website</div>
					<div style="clear: both;"></div>
					<% @responses.each do |response| %>
						<% request = DateRequest.find(response.date_request_id) %>
						<div class="large-2" style="float:left;margin: 10px;"><%= request.first_name %></div>
					
						<div class="large-2" style="float:left;margin: 10px;"><%= request.date_phone %></div>
						<div class="large-2" style="float:left;margin: 10px;"><%= request.date_username %></div>
						<div class="large-2" style="float:left;margin: 10px;"><%= request.date_username_site %></div>
						<div style="clear: both;"></div>
					<% end %>
				
					<div id="date_request_area"></div>
					
				</div>

</div>
<div style="clear: both;"></div>

<%= link_to 'Back', users_path %>


